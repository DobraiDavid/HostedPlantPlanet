    <changeSet id="assign-role-user" author="Dobrai David">
        <sql>
            CREATE TRIGGER assign_role_user
                AFTER INSERT ON users
                FOR EACH ROW
                INSERT INTO allocate (user_id, permission_id)
                VALUES (NEW.id, 'ROLE_USER');
